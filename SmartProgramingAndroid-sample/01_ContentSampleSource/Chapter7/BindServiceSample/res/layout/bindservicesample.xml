    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

  <Button
    android:text="サービス開始" 
    android:id="@+id/startButton" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"/>
    
  <Button
    android:text="サービス終了" 
    android:id="@+id/stopButton" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"/>   
 

</LinearLayout>
