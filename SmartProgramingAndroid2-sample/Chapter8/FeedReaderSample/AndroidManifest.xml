<?xml version="1.0" encoding="utf-8"?>
<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  package="jp.co.techfun.feedreader"
  android:versionCode="1"
  android:versionName="1.0">

  <application
    android:icon="@drawable/icon"
    android:label="@string/app_name">

    <receiver
      android:name=".FeedReaderSampleProvider"
      android:label="@string/app_name">
      <intent-filter>
        <action
          android:name="android.appwidget.action.APPWIDGET_UPDATE" />
      </intent-filter>
      <meta-data
        android:name="android.appwidget.provider"
        android:resource="@xml/widget" />
    </receiver>

    <service
      android:name=".FeedReaderIntentService">
      <intent-filter>
        <action
          android:name="jp.co.techfun.feedreader.ACTION_PREVBTN_CLICK" />
        <action
          android:name="jp.co.techfun.feedreader.ACTION_NEXTBTN_CLICK" />
      </intent-filter>
    </service>
  </application>

  <uses-permission
    android:name="android.permission.INTERNET" />

</manifest>